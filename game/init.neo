fn hofstadter_conway(m: Int) {
  let k1: Int = 2;
  let lg2: Int = 1;
  let amax: Float = 0.0;
  let list: Array = [ -50000, 1, 1 ].resize(0x100000 + 1);
  let v: Int = list[2];
  for (let n: Int = 3; n <= m; n++) {
    list[n] = list[v] + list[n-v];
    v = list[n];
    if (amax < v*1.0/n) amax = v*1.0/n;
    if (0 == (k1&n)) {
      print("Maximum between 2^", lg2, " and 2^", lg2+1, " was ", amax, "\n");
      amax = 0.0;
      lg2++;
    }
    k1 = n;
  }
}

