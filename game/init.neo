/* The best
 * triangle known to man kind. */
fn sierpinski(n: Int) {
  for (let y: Int = n - 1; y >= 0; y--) {
    for (let i = 0; i < y; i++)
      print(" ");
    for (let x: Int = 0; x + y < n; x++)
      if (x & y) print("  "); else print("* ")
    print("\n");
  }
}

